	<screen id="pause" controller="com.catcong.menus.InGameMenu">
		<layer id="foreground" childLayout="center">

            <panel id="panel_background" width = "30%" height="60%"  childLayout="vertical">

                <panel id="panel_first" backgroundColor="#ee4035" width="*" height="26%" childLayout="center">
                    
					​<control name="button" label="Resume" id="ResumeButton" align="center" valign="center"
					​visibleToMouse="true" width="25%" height="17%" backgroundColor="#0C234B">
					​<interact onClick="resumeButton()"/>
