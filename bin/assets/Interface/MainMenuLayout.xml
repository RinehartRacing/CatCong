<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
	<screen id="start" controller="com.catcong.menus.InGameMenu">
		<layer id="foreground" childLayout="center">

            <panel id="panel_background" width = "30%" height="60%"  childLayout="vertical">

                <panel id="panel_first" backgroundColor="#ee4035" width="*" height="26%" childLayout="center">
                    
					​<control name="button" label="Resume" id="ResumeButton" align="center" valign="center"
					​visibleToMouse="true" width="25%" height="17%" backgroundColor="#0C234B">
					​<interact onClick="resumeButton()"/>
					​</control>
					
                </panel>

                <panel id="panel_second" backgroundColor="#7bb3ff" width="*" height="26%" childLayout="center">

                    ​<control name="button" label="Restart" id="RestartButton" align="center" valign="center"
					​visibleToMouse="true" width="25%" height="17%" backgroundColor="#0C234B">
					​<interact onClick="restartButton()"/>
					​</control>

                </panel>

                <panel id="panel_third" backgroundColor="#ffffff" width="*" height="26%" childLayout="center">
					​<control name="button" label="Return to Home Screen" id="HomeScreenButton" align="center" valign="center"
					​visibleToMouse="true" width="25%" height="17%" backgroundColor="#0C234B">
					​<interact onClick="homeScreenButton()"/>
					​</control>
                    

                </panel>
				<panel id="panel_fourth" backgroundColor="#ee4035" width="*" height="26%" childLayout="center">
					​<control name="button" label="Quit CatCong" id="QuitButton" align="center" valign="center"
					​visibleToMouse="true" width="25%" height="17%" backgroundColor="#0C234B">
					​<interact onClick="quitButton()"/>
					​</control>
                    

                </panel>

            </panel>

        </layer>
    </screen>
</nifty>